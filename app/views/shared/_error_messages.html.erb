<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      This form can't be posted due to <%= pluralize(object.errors.count, "error") %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>
