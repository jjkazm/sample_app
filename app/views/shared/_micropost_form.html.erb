<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, class: "form-control", placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post it", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').on('change', function(){
    var file_size = this.files[0].size
    if(file_size > 5 *1024 * 1024){
      alert("Maximum file size is 5mb. Please choose other file.")
    }
  });
</script>
